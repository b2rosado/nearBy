<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nearby"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.nearby.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.nearby.TransportsActivity"
            android:label="@string/title_activity_transports" >
        </activity>
        <activity
            android:name="com.example.nearby.TransportInfoActivity"
            android:label="@string/title_activity_transport_info" >
        </activity>
        <activity
            android:name="com.example.nearby.RestaurantsActivity"
            android:label="@string/title_activity_restaurants" >
        </activity>
        <activity
            android:name="com.example.nearby.RestaurantInfoActivity"
            android:label="@string/title_activity_restaurant_info" >
        </activity>
        <activity
            android:name="com.example.nearby.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.nearby.FiltersActivity"
            android:label="@string/title_activity_filters" >
        </activity>
        <activity
            android:name="com.example.nearby.RestaurantsFilterActivity"
            android:label="@string/title_activity_restaurants_filter" >
        </activity>
    </application>

</manifest>
